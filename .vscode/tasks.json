{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build TypeScript in Web",
            "type": "shell",
            "command": "./web/node_modules/.bin/tsc",
            "args": ["-p", "web", "--watch"],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$tsc"],
            "presentation": {
                "reveal": "always"
            },
            "isBackground": true,
            "runOptions": {
                "runOn": "folderOpen"
            }
        }
    ]
}
